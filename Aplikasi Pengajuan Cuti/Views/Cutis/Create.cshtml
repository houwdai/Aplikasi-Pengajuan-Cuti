@model Aplikasi_Pengajuan_Cuti.ViewModels.ViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cuti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.cuti.id_pegawai" class="control-label"></label>
                <select asp-for="@Model.cuti.id_pegawai" class="form-control" asp-items="@Model.Pegawai"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.cuti.alasan" class="control-label"></label>
                <input asp-for="@Model.cuti.alasan" class="form-control" />
                <span asp-validation-for="@Model.cuti.alasan" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.cuti.id_status" value="1" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
